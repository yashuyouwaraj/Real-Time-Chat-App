# Backend Configuration
PORT=5000

# Database
DB_HOST=localhost
DB_PORT=6450
DB_NAME=realtime_chat_and_threads_app
DB_USER=postgres
DB_PASSWORD=postgres

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Redis Configuration (for Socket.io scaling)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
ENABLE_REDIS_ADAPTER=false

# To enable Redis adapter:
# 1. Install Redis (Docker: docker run -d -p 6379:6379 redis)
# 2. Set ENABLE_REDIS_ADAPTER=true
# 3. Restart the server

# For production with multiple servers:
# ENABLE_REDIS_ADAPTER=true
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
